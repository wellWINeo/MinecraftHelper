<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- row 0 -->
        <TableRow>

            <Button
                android:id="@+id/btn_0_0"
                android:layout_margin="10dp"
                android:width="70dp"
                android:height="70dp"
                android:backgroundTint="@color/teal_200" />

            <Button
                android:id="@+id/btn_0_1"
                android:layout_margin="10dp"
                android:width="70dp"
                android:height="70dp"
                android:backgroundTint="@color/teal_200" />

            <Button
                android:id="@+id/btn_0_2"
                android:layout_margin="10dp"
                android:width="70dp"
                android:height="70dp"
                android:backgroundTint="@color/teal_200" />
        </TableRow>

        <!-- row 1 -->
        <TableRow>

            <Button
                android:id="@+id/btn_1_0"
                android:layout_margin="10dp"
                android:width="70dp"
                android:height="70dp"
                android:backgroundTint="@color/teal_200" />

            <Button
                android:id="@+id/btn_1_1"
                android:layout_margin="10dp"
                android:width="70dp"
                android:height="70dp"
                android:backgroundTint="@color/teal_200" />

            <Button
                android:id="@+id/btn_1_2"
                android:layout_margin="10dp"
                android:width="70dp"
                android:height="70dp"
                android:backgroundTint="@color/teal_200" />
        </TableRow>

        <!-- row 2 -->
        <TableRow>

            <Button
                android:id="@+id/btn_2_0"
                android:layout_margin="10dp"
                android:width="70dp"
                android:height="70dp"
                android:backgroundTint="@color/teal_200" />

            <Button
                android:id="@+id/btn_2_1"
                android:layout_margin="10dp"
                android:width="70dp"
                android:height="70dp"
                android:backgroundTint="@color/teal_200" />

            <Button
                android:id="@+id/btn_2_2"
                android:layout_margin="10dp"
                android:width="70dp"
                android:height="70dp"
                android:backgroundTint="@color/teal_200"/>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btnViewItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="@+id/tableLayout"
        app:layout_constraintStart_toStartOf="@+id/tableLayout"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        android:width="150dp"
        android:height="50dp"
        android:text="@string/what_is_it"
        android:textSize="20sp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>